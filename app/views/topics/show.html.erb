<h1><%= @topic.name %></h1>

<% if user_can_update? %> 
  <%= link_to "Edit Topic", edit_topic_path, class: 'btn btn-success' %>
<% end %>
<% if user_can_create_delete? %>
  <%= link_to "Delete Topic", @topic, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this topic?' } %>
<% end %>
 
 <div class="row">
   <div class="col-md-8">
     <p class="lead">
      <%= render partial: "labels/list", locals: { labels: @topic.labels } %>
     <br />
     <%= @topic.description %>
     </p>
     <h3>Comments</h3>
     <%= render @topic.comments, base: @topic %>
     <% if current_user %>
        <%= render 'comments/form', comment: Comment.new, base: @topic %>
     <% end %>
     <h3>Posts</h3>
     <%= render @topic.posts %>
     <% @topic.sponsoredposts.each do |spost| %>
       <div class="media">
         <div class="media-body">
           <h4 class="media-heading">
             <%= link_to spost.title, topic_sponsoredpost_path(@topic, spost) %>
           </h4>
           <small>
             submitted <%= time_ago_in_words(spost.created_at) %> ago <br>
             Sponsored Post
           </small>
         </div>
       </div>
     <% end %>
   </div>
   <% if current_user %>
   <div class="col-md-4">
     <%= link_to "New Post", new_topic_post_path(@topic), class: 'btn btn-success' %>
     <%= link_to "New Sponsored Post", new_topic_sponsoredpost_path(@topic), class: 'btn btn-success' %>
   </div>
   <% end %>
 </div>