<div class="row">
    <div class="col-md-8">
        <div class="media">
            <br />
            <% avatar_url = user.avatar_url(48) %>
            <% if avatar_url %>
                <div class="media-left">
                    <%= image_tag avatar_url, class: "media-object" %>
                    <small style="position: relative; left: 15%"><%= pluralize(favorite.post.votes.count, "vote") %></small>
                </div>
            <% end %>
            <div class="media-body">
                <%= render partial: "posts/post", locals: {post: favorite.post} %>
            </div>
        </div>
    </div>
</div>