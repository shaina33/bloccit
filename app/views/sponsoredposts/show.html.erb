<h1><%= @spost.title %></h1>

<div class="row">
    <div class="col=md-8">
        <p><%= @spost.body %></p>
    </div>
    <div class="col-md-4">
        <%= link_to "Edit", edit_topic_sponsoredpost_path(@spost.topic, @spost), class: 'btn btn-success' %>
        <%= link_to "Delete Sponsored Post", [@spost.topic, @spost], method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this sponsored post?'} %>
    </div>
</div>
